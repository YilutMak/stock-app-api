// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Stocks {
  id     Int    @id @default(autoincrement())
  symbol String
  user   User?  @relation(fields: [userId], references: [id])
  userId Int?
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  stocks       Stocks[]
  avatar       String?
}
